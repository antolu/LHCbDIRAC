package           LHCbDiracConfig

use LCG_Settings *
use LHCbGridSys v*

#At CERN, define the location of certificates...
macro X509_CERT_VO "$(VO_LHCB_SW_DIR)/etc/grid-security/certificates"
macro X509_VOMS_VO "$(VO_LHCB_SW_DIR)/etc/grid-security/vomsdir"
macro X509_CERT_CVMFS "/cvmfs/lhcb.cern.ch/etc/grid-security/certificates"
macro X509_VOMS_CVMFS "/cvmfs/lhcb.cern.ch/etc/grid-security/vomsdir"
macro DIRAC_CONFIG_tmp "$(DIRAC_home)/etc/dirac.cfg"
macro DIRAC_VOMSES_VO "$(VO_LHCB_SW_DIR)/etc/grid-security/vomses"
macro DIRAC_VOMSES_CVMFS "/cvmfs/lhcb.cern.ch/etc/grid-security/vomses"

set X509_CERT_DIR  '`test -n "$X509_CERT_DIR" && echo "$X509_CERT_DIR" || echo "$(X509_CERT_CVMFS)" || echo "$(X509_CERT_VO)"`'
set X509_VOMS_DIR '`test -n "$X509_VOMS_DIR" && echo "$X509_VOMS_DIR" || echo "$(X509_VOMS_CVMFS)" || echo "$(X509_VOMS_VO)"`'
set DIRACSYSCONFIG "$(DIRACSYSCONFIG)"  CERN "$(DIRAC_home)/etc/dirac.cfg" \
                                      LOCAL '`test -n "$DIRACSYSCONFIG" && echo "$DIRACSYSCONFIG" || echo "$(DIRAC_CONFIG_tmp)"`'
set DIRAC_VOMSES '`test -n "$DIRAC_VOMSES" && echo "$DIRAC_VOMSES" || echo "$(DIRAC_VOMSES_CVMFS)" || echo "$(DIRAC_VOMSES_VO)"`'


use pygraphics v* LCG_Interfaces
use pytools    v* LCG_Interfaces

macro        pyth_maj "echo $(Python_config_version)  | awk -F . '{print $1}'"
macro        pyth_min "echo $(Python_config_version)  | awk -F . '{print $2}'"
macro        Python_config_version_twodigit   `$(pyth_maj)`.`$(pyth_min)`

set PYTHON_VERSION $(Python_config_version)
set PYTHON_CONFIG_VERSION $(Python_config_version_twodigit)
set PYTHON_VERSION_TWODIGIT `$(pyth_maj)``$(pyth_min)`


private
# Avoid the installation of __init__.py in the parent directory.
ignore_pattern install_python_init
end_private
