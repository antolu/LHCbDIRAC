package           DiracConfig

use LCG_Settings *
use LHCbGridSys v*

set DIRAC_VOMSES "$(DiracConfig_cmtpath)/etc/vomses"

#At CERN, define the location of certificates...
set X509_CERT_DIR "$(X509_CERT_DIR)"  CERN "/afs/cern.ch/project/gd/LCG-share/current/external/etc/grid-security/certificates"
set X509_VOMS_DIR "$(X509_VOMS_DIR)"  CERN "/afs/cern.ch/project/gd/LCG-share/current/external/etc/grid-security/vomsdir"

use pyqt     v* LCG_Interfaces

macro        Python_config_version               2.4.2
macro        pyth_maj "echo $(Python_config_version)  | awk -F . '{print $1}'"
macro        pyth_min "echo $(Python_config_version)  | awk -F . '{print $2}'"
macro        Python_config_version_twodigit   `$(pyth_maj)`.`$(pyth_min)`

macro        pyqt_config_version                 4.4.3
macro        Qt_config_version                   4.4.2
macro        sip_config_version                  4.7.7

