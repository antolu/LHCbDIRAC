package           LHCbDiracPolicy

use DiracPolicy *

# Install __init__.py in the hat directory
#-------------------------------------------------------------------
macro top__init__source $(LHCbDiracPolicy_root)/cmt/__init__.py

cmtpath_pattern \
   macro <project>_home "<path>"

private
# Avoid the patterns that should not be used here
ignore_pattern install_python_init
ignore_pattern deploy_dirac_scripts
#ignore_pattern prepare_install_area
end_private

#-------------------------------------------------------------------
# Determine which DIRAC platform we are on
macro dplat "" \
      "target-x86_64"&"target-slc5" "Linux_x86_64_glibc-2.5" \
      "target-i686"&"target-slc5" "Linux_i686_glibc-2.5" \
      "target-x86_64"&"target-slc6" "Linux_x86_64_glibc-2.12" \
      "target-i686"&"target-slc6" "Linux_i686_glibc-2.12" \
      x86_64-slc5-gcc43-opt "Linux_x86_64_glibc-2.5" \
      x86_64-slc5-gcc43-dbg "Linux_x86_64_glibc-2.5" \
      x86_64-slc6-gcc46-opt "Linux_x86_64_glibc-2.12" \
      x86_64-slc6-gcc46-dbg "Linux_x86_64_glibc-2.12" \
      x86_64-slc6-gcc48-opt "Linux_x86_64_glibc-2.12" \
      x86_64-slc6-gcc48-dbg "Linux_x86_64_glibc-2.12" \
      x86_64-slc6-gcc49-opt "Linux_x86_64_glibc-2.12" \
      x86_64-slc6-gcc49-dbg "Linux_x86_64_glibc-2.12"
set DIRACPLAT $(dplat)

